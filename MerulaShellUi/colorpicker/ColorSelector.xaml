<UserControl x:Class="MerulaShellUi.colorpicker.ColorSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="266" d:DesignWidth="280">
    <Border Name="bdrSelector" MouseDown="BorderMouseDown" MouseUp="BorderMouseUp" MouseMove="BorderMouseMove">
        <Border.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Color="Red"     Offset="0.020" />
                <GradientStop Color="Fuchsia" Offset="0.167" />
                <GradientStop Color="Blue"    Offset="0.334" />
                <GradientStop Color="Aqua"    Offset="0.501" />
                <GradientStop Color="Lime"    Offset="0.668" />
                <GradientStop Color="Yellow"  Offset="0.835" />
                <GradientStop Color="Red"     Offset="0.975" />
            </LinearGradientBrush>
        </Border.Background>
    </Border>
</UserControl>
